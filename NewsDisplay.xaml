<Window x:Class="Project_NNTP_Niklas.NewsDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="News" Height="450" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Newsgroups column: header + constrained list -->
        <Grid Grid.Column="0" Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Newsgroups" FontWeight="Bold" Margin="0,0,0,6"/>
            <ListBox x:Name="lstGroups"
                     Grid.Row="1"
                     SelectionChanged="LstGroups_SelectionChanged"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     HorizontalContentAlignment="Stretch"/>
        </Grid>

        <!-- Articles column: header + constrained list -->
        <Grid Grid.Column="1" Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Articles" FontWeight="Bold" Margin="0,0,0,6"/>
            <ListBox x:Name="lstArticles"
                     Grid.Row="1"
                     SelectionChanged="LstArticles_SelectionChanged"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     HorizontalContentAlignment="Stretch"/>
        </Grid>

        <!-- Right column: welcome, greeting, and article headers/body -->
        <Grid Grid.Column="2" Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="txtWelcome" Grid.Row="0" FontSize="16" FontWeight="Bold" Margin="0,0,0,6"/>
            <TextBlock x:Name="txtGreeting" Grid.Row="1" FontSize="12" Foreground="Gray" TextWrapping="Wrap" Margin="0,0,0,10"/>
            <TextBlock Text="Headers / Preview" Grid.Row="2" FontWeight="Bold" Margin="0,0,0,6"/>

            <TextBox x:Name="txtArticle"
                     Grid.Row="3"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"/>
        </Grid>
    </Grid>
</Window>
